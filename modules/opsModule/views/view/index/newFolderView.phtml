<div id="new-folder-ui" style="width: 50%">
    <ol class='text-danger' style="list-style-image: url('/access/img/bullet.png');padding:0;margin-left:15px;">
    <?php foreach ($this->errors as $error) : ?>
        <li><?php echo $error ?></li>
    <?php endforeach; ?>
    </ol>
    <form action="<?php echo $this->request->GetURI() ?>" method="POST" class="form">
    <?php if(false && isset($this->request->params["continue"])) : ?>
        <input type="hidden" name="continue" value="<?php echo $this->request->params["continue"]; ?>" />
    <?php endif; ?>
        <div class="input-group">
          <input type="text" class="form-control" name="folder_title" maxlength="250" placeholder="Folder's title" value="<?php echo isset($this->values['folder_title'])?$this->values['folder_title']:"" ?>">
          <span class="input-group-btn">
          <button type="submit" class="btn btn-primary" >Create</button>
          </span>
        </div><!-- /input-group -->
    </form>
    <script>
        $(document).ready(function(){
            $("#new-folder-ui form" ).submit(function(e) {
                e.preventDefault();
                $.ajax({
                    type: $(this).attr("method"),
                    url: $(this).attr("action"),
                    data: $(this).serialize()+"&suppress_redirection=1&"+$(this).attr("action").split("?")[1]
                });
            });
        });
    </script>
</div>